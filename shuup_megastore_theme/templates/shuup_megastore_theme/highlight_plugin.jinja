{%- import "shuup/front/macros.jinja" as macros with context -%}

<section class="carousel-section">
    {% if title %}
        <div class="title-bar light"><h2>{{ title }}</h2></div>
    {% endif %}
    <div class="product-carousel owl-carousel five">
    {% for product in products if shuup.product.is_visible(product) %}
        {{ macros.product_box(product) }}
    {% endfor %}
    </div>
</section>
